include header

div.container
      ul.breadcrumb
        li.active
          a(href='#step1') Step 1
          span.divider |
        li
          a(href='#step2') Step 2
          span.divider |
        li
          a(href='#step3') Step 3
          span.divider |
        li
          a.breaddisabled(href='#step4') Overview
