      .row
        include properties
        
        #step1
          .span7
            form.form-horizontal
              legend Make a choice
              select
                option --Series--
                - series.forEach(function(item){
                     option(value="#{item._id}") #{item.name} 
                - })
              .form-actions
                ul.pager
                  li
                    a#step2Btn(href='#step2') Next
                .dummy
        div
          form.form-horizontal#itemCreation(enctype='multipart/form-data', method='post', action='post')
            #step2
              .span7
                #title
                  h2  Metadata 
                  fieldset
                   .dataform
                  .form-actions
                    ul.pager
                      li
                        a#step3EditBtn(href='#step3') Next Step
                      li
                        a(href='#') Save
                    .dummy
            #step3
              .span7
                h2 Digital media
                .control-group
                  label.control-label(for='surcheck') Media:
                  .controls
                    label.checkbox
                      input#surcheck.checkbox(type='checkbox', name='surcheck')
                      | I have media (images,video,...).
                #fileBox.control-group
                  label.control-label(for='media') Upload your file:
                  .controls
                    input#media(type='file', name='media')
                    p.help-inline Surrogates will be generated automatically
                    #fileContainer
                h2 Images included
                #imageContainer
                .form-actions
                  
                  ul.pager
                    li
                      a(href='#step2') Previous Step
                    li
                      a#subItem(href='#') Save
                  .dummy Â 
