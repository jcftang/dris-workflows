include _includes/header

div.container
      ul.breadcrumb
        li.active
          a(href='#step1') Step 1
          span.divider |
        li
          a(href='#step2') Step 2
          span.divider |
        li
          a(href='#step3') Step 3
          span.divider |
        li
          a.breaddisabled(href='#step4') Overview
      .dummy
      .row
        include _includes/properties
        
        #step1
          .span7
            form.form-horizontal
              legend Make a choice
              select#itemEditSelection.chzn-select(data-placeholder="Choose an option...")
              .form-actions
                ul.pager
                  li
                    a#globalBtn(href='') Global edit
                    a#step2Btn(href='#step2') Edit Items
                .dummy
        div
          form.form-horizontal#itemCreation(enctype='multipart/form-data', method='post', action='post')
            #step2
              .span7
                #title
                  h2  Metadata 
                  a.btn.previousItemBtn(href='#') <
                  a.btn.nextItemBtn(href='#') >
                  fieldset
                   .dataform
                   .alert.alert-success.successbox
                      a.close(data-dismiss='alert') ×
                      strong Successful
                      p Creation successful!
                  .form-actions
                    
                    ul.pager
                      li
                        a#step3EditBtn(href='#step3') Next Step
                      li
                        a#editItem2(href='#') Save
                    a.btn.previousItemBtn(href='#') <
                    a.btn.nextItemBtn(href='#') >
                    .dummy
            #step3
              .span7
                h2 Digital media
                .control-group
                  label.control-label(for='surcheck') Media:
                  .controls
                    label.checkbox
                      input#surcheck.checkbox(type='checkbox', name='surcheck')
                      | I have media (images,video,...).
                #fileBox.control-group
                  label.control-label(for='media') Upload your file:
                  .controls
                    input#media(type='file', name='media')
                    p.help-inline Surrogates will be generated automatically
                    #fileContainer
                h2 Images included
                #imageContainer
                .form-actions
                  
                  ul.pager
                    li
                      a(href='#step2') Previous Step
                    li
                      a#editItem2(href='#') Save
                  .dummy  
        #step4
          .span7
            h2 Overview
            .form-actions
              ul.pager
                li
                  a(href='#step3') Previous
              .dummy

      include _includes/footer
